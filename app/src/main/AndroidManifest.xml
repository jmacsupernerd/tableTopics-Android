<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mcwilliams.TableTopicsApp">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        tools:replace="icon, label"
        android:allowBackup="true"
        android:name=".TableTopicsApplication"
        android:icon="@drawable/ic_launcher"
        android:label="Table Topics"
        android:theme="@style/Theme.App">

        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>

        <activity android:name=".activities.Main"
            android:label="Table Topics"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- <meta-data android:name="com.crashlytics.ApiKey" android:value="56ed480b2e0151aa946b99e2d5aa9c760f60cf3d"/>-->
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="56ed480b2e0151aa946b99e2d5aa9c760f60cf3d" />
    </application>

</manifest>